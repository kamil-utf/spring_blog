<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <!-- Master template definition -->
    <definition name="master" template="/WEB-INF/views/layouts/master.jsp">
        <put-attribute name="menu" value="/WEB-INF/views/tiles/menu.jsp"></put-attribute>
        <put-attribute name="widget" value="/WEB-INF/views/tiles/widget.jsp"></put-attribute>
    </definition>

    <!-- Wildcard -->
    <definition name="master.*" extends="master">
        <put-attribute name="body" value="/WEB-INF/views/pages/{1}.jsp"></put-attribute>
    </definition>

</tiles-definitions>